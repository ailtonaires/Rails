<%- model_class = Product -%>
<div class="page-header">
  <h1> Pedidos </h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:Cliente) %></th>
      <th><%= model_class.human_attribute_name(:Quantidade) %></th>
      <th><%= model_class.human_attribute_name(:Valor) %></th>
      <th><%=t '.actions', :default => t("helpers.Ações") %></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.amount %></td>
        <td><%= product.value %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.ver")),
                      product_path(product), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.editar")),
                      edit_product_path(product), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.excluir")),
                      product_path(product),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.novo")),
            new_product_path,
            :class => 'btn btn-primary' %>
