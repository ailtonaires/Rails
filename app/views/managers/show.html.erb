<%- model_class = Manager -%>
<div class="page-header">
  <h1>Clientes</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:Nome) %>:</strong></dt>
  <dd><%= @manager.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Telefone) %>:</strong></dt>
  <dd><%= @manager.password %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              managers_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_manager_path(@manager), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              manager_path(@manager),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
